{
  "name": "Instagram Mobile for Chrome",
  "version": "0.0.1",
  "description": "Turns instagram.com to the mobile version in Chrome",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistant": true
  },
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "*://*.instagram.com/*"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "all_frames": true,
      "matches": [
        "https://www.instagram.com/*"
      ],
      "js": [
        "injection.js"
      ]
    }
  ],
  "browser_action": {
//    "default_icon": {
//      "16": "images/icon16.png",
//      "24": "images/icon24.png",
//      "32": "images/icon32.png"
//    },
    "default_title": "Instagram Mobile for Chrome",
    "default_popup": "popup.html"
  }
}